<?xml version="1.0" encoding="euc-kr" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
    <resultMap id="boardMap" type="com.mycompany.myapp.dto.Ch12Board">
        <id column="bno" property="bno"/>
        <result column="btitle" property="btitle"/>
        <result column="bcontent" property="bcontent"/>
        <result column="bdate" property="bdate"/>
        <result column="mid" property="mid"/>
    </resultMap>

    <resultMap id="boardListMap" type="com.mycompany.myapp.dto.Ch12Board">
        <id column="bno" property="bno"/>
        <result column="btitle" property="btitle"/>
        <result column="bdate" property="bdate"/>
        <result column="mid" property="mid"/>
    </resultMap>

    <select id="selectAll" parameterType="map" resultType="com.mycompany.myapp.dto.Ch12Board" resultMap="boardListMap">
		select bno, btitle, bdate, mid from board order by bno desc
	</select>

    <select id="selectByBno" parameterType="int" resultType="com.mycompany.myapp.dto.Ch12Board" resultMap="boardMap">
		select * from board where bno=#{bno}
	</select>

    <insert id="insert"
            parameterType="com.mycompany.myapp.dto.Ch12Board"
            useGeneratedKeys="true"
            keyProperty="bno">
		insert into board (btitle, bcontent, bdate, mid) values (#{btitle}, #{bcontent}, sysdate, #{mid})
	</insert>

    <update id="update" parameterType="com.mycompany.myapp.dto.Ch12Board">
		update board set btitle=#{btitle}, bcontent=#{bcontent} where bno=#{bno}
	</update>

    <delete id="delete" parameterType="int">
		delete from board where bno=#{bno}
	</delete>
</mapper>

